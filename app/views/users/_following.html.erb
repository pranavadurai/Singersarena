<div class="col-8">
<% if @user.followeds.any? %>
   <ul class="list-group list-group-flush">
   <% @user.followeds.each do |user| %>
     <li class="list-group-item col-md-12">
       <div class="row">
         <div class="col-3"><img class="rounded-circle img-fluid" height="50" style ="width: 100%" src="<%= user_image(user.followed.id)%>" /></div>
         <div class="col-7"><div class="row"><%= link_to user.followed.name, user_path(user.followed.id) %></div><div class="row"> <%= user.followed.songs.count %>&nbsp;Songs</div></div>
       </div>
     </li>
   <% end %>
 </ul>
<% else %>
  <h3>No Followers </h3>
  <% end %>
</div>
