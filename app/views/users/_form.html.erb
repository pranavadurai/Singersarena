<%= form_for(user, class:"form-horizontal",role:"form",:multipart => 'true') do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="row">
      <div class="col-md-2 control-label">
        <%= f.label :name,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name,class: "form-control",placeholder: "Name:",:required => true  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 control-label">
        <%= f.label :email,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.email_field :email,class: "form-control",placeholder: "Email:",:required => true  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :password,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.password_field :password,class: "form-control",placeholder: "password", :required =>true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :phone,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :phone,class: "form-control",placeholder: "Phone",:required =>true %>
      </div>
    </div>
  
    <div class="row">

      <div class="col-md-2">
        <%= f.label :Photo,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.file_field :image,class: "form-control btn btn-default" %>
      </div>
    </div>
    <div class="row">
      <%= f.label :Gender,class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
      <label class="radio-inline">
          <input type="radio" name="user[gender]" value="male" <% if user.gender=="male" %> checked="true"<% end %> >Male
      </label>
      <label class="radio-inline">
        <input type="radio" name="user[gender]" value="female" <% if user.gender=="female" %> checked="true"<% end %>>Female
      </label></div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :city,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :city,class: "form-control",placeholder: "City",:required => true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :country,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :country,class: "form-control",placeholder: "Country",:required=>true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :Few_lines_about_me,class: "col-sm-2 control-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_area :aboutme,class: "form-control",placeholder: "About me",:required=>true %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Privacy:</label>
      <div class="checkbox">
        <label><input type="checkbox" name="user[msga]" <% if user.msga %> checked="true"<% end %> value="true">Can anyone send me message</label>
        <label><input type="checkbox" name="user[viemail]" <% if user.viemail %> checked="true"<% end %> value="true">Can anyone see my Email</label>
        <label><input type="checkbox" name="user[viphone]" <% if user.viphone %> checked="true"<% end %>value="true">Can anyone see my Phone no</label>
        <label><input type="checkbox" name="user[is_singer]" <% if user.is_singer %> checked="true"<% end %> value="true">Are you singer???</label>
      </div></div>

    <%= f.submit "Save",class: "btn btn-default center-block"%>
  </div>
<% end %>
