<% if @user.followers.any? %>
   <ul class="list-group list-group-flush">
   <% @user.followers.each do |user| %>
     <li class="list-group-item col-md-12"><div class="row"> <div class="col-2"><img class="rounded-circle img-fluid" height="50" style ="width: 100%" src="<%= user_image(user.follower.id)%>" /></div><div class="col-10"><%= user.follower.name %></div></div></li>
   <% end %>
 </ul>
<% else %>
  <h3>No Followers </h3>
  <% end %>
