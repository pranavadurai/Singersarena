<% if @over_ten %>
 <%= link_to 'Show Previous', '?m=all' %>
<% end %>

<div id="messages">
 <% @messages.each do |mqwdessage| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
       <strong><%= user.name %></strong>     <%= message.message_time %></div>
               <%= message.body %>
 <% end %>
<% end %>
</div>

<%= form_for [@conversation, @message],remote: true, html: {class: "ui reply form"} do |f| %>
 <div class="field">
   <%= f.text_area :body, class: "form-control" %>
 </div>
 <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
 <div>
   <%= f.submit "Add Reply", class: "ui blue labeled submit icon button" %>
 </div>

<% end %>
