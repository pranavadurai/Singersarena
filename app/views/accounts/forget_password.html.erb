<% if notice %>
  <div class="alert alert-success" id="password_reset_msg"><%= notice %></div>
<% end %>

<h2 class="text-center mt-5"> <img src=" <%= icon %>" height="50" width="50" class="img-fluid"> Singersarena </h2>

<div class="row justify-content-md-center mt-5">
    <%= form_for(:profile, url: forget_password_accounts_path,remote: true,method: :GET,  id: "forget_password") do |f|  %>
      <div class="row">
        <div class="col-12 mt-5">
          <div class="row">
            <%= f.label :Email %>
            <%= f.email_field :email,class:"form-control",placeholder: "Email", id: "email_check" %>
          </div>
          <div class="row justify-content-md-center">
            <%= f.submit "Reset", class: "btn btn-default text-center mt-2", id: "forget_password_form" %>
          </div>
    </div>
      </div>
      <% end %>
    </div>
